<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="#e0f7fa">

    <!-- Temperature TextView -->
    <TextView
        android:id="@+id/text_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12C"
        android:textSize="24sp"
        android:textColor="#000"
        android:layout_margin="16dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <!-- Weather Description TextView -->
    <TextView
        android:id="@+id/text_weather_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cloudy"
        android:textSize="18sp"
        android:textColor="#000"
        android:layout_below="@id/text_temperature"
        android:layout_alignStart="@id/text_temperature" />

    <!-- Weather Icon ImageView -->
    <ImageView
        android:id="@+id/image_weather_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cloudy"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="16dp" />
</RelativeLayout>



